<div class="container">

  <div class="col-xs-12 col-sm-6 col-lg-6 col-sm-offset-3">

    <div class="login">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'no_border shadow padding-form' } %>
        <%= f.input :password, required: false, input_html: { class: 'no_border shadow padding-form' } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <% end %>

      <div class="align-h margin-top">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
