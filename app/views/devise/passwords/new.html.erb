<div class="container">

  <div class="col-xs-12 col-sm-6 col-lg-6 col-sm-offset-3">

    <div class="devise">

      <h2>It's not dark, yet.</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs margin-top">
        <%= f.input :email, required: true, autofocus: true, input_html: { class: 'no_border shadow padding-form' } %>
      </div>

      <div class="form-actions margin-top">
        <%= f.button :submit, "Send me reset password instructions" %>
      </div>
      <% end %>

      <div class="align-h margin-top">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
