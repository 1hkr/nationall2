

<div class="container-fluid side-margin">
  <div class="row margin-left">
    <!-- LEFT SIDE -->
    <div class="col-xs-3 col-md-3 col-sm-3 sticky card-author-container">
      <div class="card-author">
        <!-- Profile of the writer -->
        <div class="article-profile">
          <div class="center author">
            <img class="card-user" src=<%= @user.picture %>>
          </div>
          <div class="user-details">
            <div class="author">
              <p> <b><%= @user.first_name%> <%= @user.last_name %></b> </p>
            </div>
            <div class="author">
              <p class="grow"> <%= @user.city %></p>
            </div>
          </div>
        </div>
        <hr>
        <div class="bio">
          <h4>Bio</h4>
          <p> <%= @user.bio %></p>
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="col-xs-8 col-md-8 col-sm-8 front">
      <!-- Article -->
      <div class="card-article">
        <!-- Articles informations -->
        <div class="article-text">
          <h1></h1>
          <h4></h4>
          <p ></p>
          <hr>
          <h4>Summary</h4>
          <p></p>
        </div>
        <hr>
        <div>
          <h4>Full article</h4>
          <p></p>
        </div>
      </div>
    </div>
  </div>
</div>
