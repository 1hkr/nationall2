<div class="container-fluid side-margin">
  <div class="row margin-left">
    <div class="col-xs-12 col-sm-6 col-lg-8 col-sm-offset-3 col-lg-offset-2 align-h bottomize space-between margin-bottom">
      <div class="form-post">
        <h1>Quizz</h1>



 <!-- FORM FOR THE CATEGORIES-->
        <div id="new_categories_pref_wrapper">
          <hr>
          <h4>What subjects do you like to read about ?</h4>
          <%= simple_form_for @categories_pref, remote: true do |f| %>

            <div class="form-group margin-bottom">
              <div class="choices">
                <div class="row">
                <% Category.all.each do |category| %>
                  <div class="col-xs-12 col-sm-4">

                      <input type="checkbox" class="hidden" value="<%= category.id %>" name="categories_pref[category_id][]" id="categories_pref_category_id_<%= category.id %>">

                        <label for="categories_pref_category_id_<%= category.id %>" class="category-choice" style="background-image: url('<%= category.picture %>')" style="cursor: pointer;">
                          <%= category.name %>
                        </label>

                  </div>
                    <% end %>
                </div>
               </div>

            <%= f.submit "Save", class: "btn-blue" %>
            <% end %>
          </div>
        </div>

 <!-- FORM FOR THE EMOTION-PREF UPDATE OF USER-->
        <div id="edit_user_wrapper" class="hidden" data-user="<%= current_user.id %>">
          <hr>
          <h4>Which reading/TedTalk would you go for ?</h4>

          <%= simple_form_for current_user, remote: true, url: emotion_prefs_path, method: :patch do |f| %>
          <div class="form-group margin-bottom">
            <div class="choices">

              <input type="radio" class="hidden" value="1" name="user[emotion_pref]" id="user_emotion_pref_1">
                <label for="user_emotion_pref_1" class="emotion-choice" style="background-image: url('https://images.pexels.com/photos/347135/pexels-photo-347135.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb')" style="cursor: pointer;">
                </label>

              <input type="radio" class="hidden" value="2" name="user[emotion_pref]" id="user_emotion_pref_2">
                <label for="user_emotion_pref_2" class="emotion-choice" style="background-image: url('https://images.pexels.com/photos/846747/pexels-photo-846747.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb')" style="cursor: pointer;">
                </label>

            </div>
            <%= f.submit "Save", class: "btn-blue" %>
            <% end %>
          </div>
        </div>


 <!-- FORM FOR THE TEMPERATURE-PREF UPDATE OF USER-->
        <div id="temperature-form" class="hidden">
          <hr>
          <h4>When you debate with someone, you are more like ? </h4>
          <%= simple_form_for current_user, url: temperature_prefs_path, method: :patch do |f| %>
          <div class="form-group margin-bottom">
            <div class="choices">
              <div class="row">

                <div class="col-xs-12 col-sm-6">
                  <input type="radio" class="hidden" value="1" name="user[temperature_pref]" id="user_temperature_pref_1">
                   <label for="user_temperature_pref_1" class="tempe-choice" style="background-image: url('https://cdn.bulbagarden.net/upload/c/c5/May_Bulbasaur.png')" style="cursor: pointer;">Bulbasaur
                   </label>
                </div>

                <div class="col-xs-12 col-sm-6">
                   <input type="radio" class="hidden" value="2" name="user[temperature_pref]" id="user_temperature_pref_2">
                     <label for="user_temperature_pref_2" class="tempe-choice" style="background-image: url('http://www.pokepedia.fr/images/3/39/Carapuce_de_Sacha.png')" style="cursor: pointer;">Squirtle
                     </label>
                </div>

                <div class="col-xs-12 col-sm-6">
                  <input type="radio" class="hidden" value="3" name="user[temperature_pref]" id="user_temperature_pref_3">
                    <label for="user_temperature_pref_3" class="tempe-choice" style="background-image: url('https://vignette.wikia.nocookie.net/ultimate-pokemon-fanon/images/c/c2/Reds_Charmander_Ember_PO.png/revision/latest?cb=20160514000535')" style="cursor: pointer;">Charmander
                    </label>
                </div>

                <div class="col-xs-12 col-sm-6">
                  <input type="radio" class="hidden" value="4" name="user[temperature_pref]" id="user_temperature_pref_4">
                    <label for="user_temperature_pref_4" class="tempe-choice" style="background-image: url('https://assets.vg247.com/current//2017/05/Pikachu-2-600x338.png')" style="cursor: pointer;">Pikachu
                    </label>
                </div>

              </div>
            </div>
          </div>

          <%= f.submit "Save", class: "btn-blue" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




