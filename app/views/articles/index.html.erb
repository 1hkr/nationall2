<div class="container-fluid side-margin">
  <% if user_signed_in? && current_user.answered === false %>
    <div>
      <%= render 'quizz_banner' %>
    </div>
    <% else %>
      <div class=row>
        <div class="col-xs-12 index-titles">
          <a href="/articles">NΔTIONΔLL</a>
        </div>
      </div>
    <%= render 'shared/filter' %>
  <% end %>


