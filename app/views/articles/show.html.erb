<!-- Article banner -->

<% if @article.picture %>
<% if @article.picture.last(3) == 'jpg' || @article.picture.last(4) == 'jpeg' || @article.picture.last(3) == 'png' || @article.picture.last(3) == 'gif' %>
<div class="article-banner" style="background-image: url(<%= @article.picture %>);">
</div>
<% else  %>
<div class="article-banner">
  <iframe id="media" src="<%= @article.picture %>" scrolling="no"></iframe>
</div>
<% end %>
<% end %>

<div class="container-fluid side-margin">
  <div class="row margin-left">

    <!-- LEFT SIDE -->
    <div class="col-xs-7 col-md-7 col-sm-7 front">

      <!-- Article -->
      <div class="card-article">

        <!-- Articles informations -->
        <div class="article-text">
          <div class="article-details">
            <p> <%= @article.category.name.upcase %></p>
            <p class="top-right"><%= @article.publishing_date %></p>
          </div>

          <h1><%= @article.title %></h1>
          <h5><%= @article.subtitle %></h5>

          <hr>


          <h4>Summary</h4>
          <p> <%= @article.summary %></p>
        </div>

        <hr>

        <div>
          <h4>Full article</h4>
          <p><%= raw @article.content %></p>
        </div>
      </div>
      <hr>
      <!-- Rate the article-->

      <div>
        <h4>Rate the article</h4>

        <div id="simple-f">
          <%= simple_form_for [@article, @review] do |f| %>
          <%= f.input :rating, collection: 1..5 %>
          <%= f.input :emotion, collection: 1..2 %>
          <%= f.input :temperature, collection: 1..4 %>
          <%= f.submit "Add my ratings", class: "btn-blue" %>
          <% end %>
        </div>
      </div>

      <hr>

      <!-- List of the ratings -->

      <% if @reviews.exists? %>
      <hr>
      <h4>Other reviews</h4>
      <% @reviews.each do |review| %>

      <!-- Writer of the review -->

      <div class="article-profile">
        <div class="center">
          <img class="card-user" src=<%= review.user.picture %>>
        </div>
        <div class="user-details">
          <div>
            <p><b><%= review.user.first_name%> <%= review.user.last_name %></b></p>
          </div>
          <div>
            <p class="grow"> <%= review.user.city %></p>
          </div>
        </div>
      </div>

      <!-- Stars of the review -->

      <ul class="list-inline">
        <% review.rating.times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-star"></i></li>
        <% end %>
        <% unless review.rating == 5 %>
        <% (5 - review.rating).times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-star-empty"></i></li>
        <% end %>
        <% end %>
      </ul>

      <ul class="list-inline">
        <% review.emotion.times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-heart"></i></li>
        <% end %>
        <% unless review.emotion == 2 %>
        <% (2 - review.emotion).times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-heart-empty"></i></li>
        <% end %>
        <% end %>
      </ul>

      <ul class="list-inline">
        <% review.temperature.times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-asterisk"></i></li>
        <% end %>
        <% unless review.temperature == 3 %>
        <% (3 - review.temperature).times do %>
        <li class="list-inline-item"><i class="glyphicon glyphicon-asterisk-empty"></i></li>
        <% end %>
        <% end %>
      </ul>

      <hr>

      <% end %>

      <% end %>

      <!-- Add an opinion -->
      <h4>Share your opinion</h4>

      <div id="simple-f">
        <%= simple_form_for [@article, @opinion] do |f| %>
        <%= f.input :content, placeholder: "Your opinion matters.", :input_html => { :rows => 5} %>
        <%= f.submit "Add my opinion", class: "btn-blue" %>
        <% end %>
      </div>


      <!-- List of opinions -->

      <% if @opinions.exists? %>
      <hr>
      <h4>Other opinions</h4>
      <% @opinions.each do |opinion| %>

      <!-- Writer of the opinion -->

      <div class="article-profile">
        <div class="center">
          <img class="card-user" src=<%= opinion.user.picture %>>
        </div>
        <div class="user-details">
          <div>
            <p><b><%= opinion.user.first_name%> <%= opinion.user.last_name %></b></p>
          </div>
          <div>
            <p class="grow"> <%= opinion.user.city %></p>
          </div>
        </div>
      </div>

      <!-- Content of the opinion-->
      <p><%= opinion.content %></p>

      <% end %>
      <% end %>



      <!-- End buttons -->

      <div class="buttons">
        <%= link_to "Back", articles_path, class: "btn-gray" %>
      </div>

      <div class="buttons">

        <% if policy(@article).edit? %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn-gray" %>
        <% end %>

        <% if policy(@article).destroy? %>
        <%= link_to "Delete", article_path(@article), class: "btn-gray", method: :delete, data: { confirm: "Are you sure?"} %>
        <% end %>

      </div>
    </div>


    <!-- RIGHT SIDE -->

    <div class="col-xs-5 col-md-5 col-sm-5 card-author">

      <!-- Profile of the writer -->
      <div class="article-profile">

        <div class="center author">
          <img class="card-user" src=<%= @article.user.picture %>>
        </div>

        <div class="user-details">
          <div class="author">
            <p> <b><%= @article.user.first_name%> <%= @article.user.last_name %></b> </p>
          </div>
          <div class="author">
            <p class="grow"> <%= @article.user.city %></p>
          </div>
        </div>

      </div>

      <hr>


      <h4>Bio</h4>
      <p> <%= @article.user.bio %></p>

      <hr>

      <% if user_signed_in? && donation = Donation.find_by(user_id: current_user.id, article_id: @article.id) %>

      <h3>Donation</h3>
      <p><%= donation.amount %>â‚¬</p>
      <a href="#", class= "btn-blue-empty">Donation done</a>
      <h5> Thank you for your donation ! </h5>

      <% else %>

      <div>
        <h4> Support independent writing <i class="fab fa-studiovinari"></i></h4>
        <%= simple_form_for [@article, @donation], :html => {:class => 'form-inline' } do |f| %>
        <%= f.input :amount, label: false, input_html: { class: 'form_light no_border donate-value', value: '0.10' } %>
        <%= button_tag(type: 'submit', class: "btn btn-link donate-button") do %>
        Donate to <%= @article.user.first_name %> <i class="fa fa-heart"></i>
        <% end %>
        <% end %>
        <% end %>
      </div>
    </div>

  </div>

</div>
