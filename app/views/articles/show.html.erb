<!-- Article banner -->

<% if @article.picture %>
<% if @article.picture.last(3) == 'jpg' || @article.picture.last(4) == 'jpeg' || @article.picture.last(3) == 'png' || @article.picture.last(3) == 'gif' %>
<div class="article-banner" style="background-image: url(<%= @article.picture %>);">
</div>
<% else  %>
<div class="article-banner">
  <iframe id="media" src="<%= @article.picture %>" scrolling="no"></iframe>
</div>
<% end %>
<% end %>

<div class="container-fluid side-margin">
  <div class="row margin-left">

    <!-- LEFT SIDE -->
    <div class="col-xs-7 col-md-7 col-sm-7 front">

      <!-- Article -->
      <div class="card-article">
        <!-- Articles informations -->
        <div class="article-text">
          <div class="article-details">
            <p> <%= @article.category.name.upcase %></p>
            <p class="top-right"><%= @article.publishing_date %></p>
          </div>

          <h1><%= @article.title %></h1>
          <h5><%= @article.subtitle %></h5>

          <hr>


          <h4>Summary</h4>
          <p> <%= @article.summary %></p>
        </div>

        <hr>

        <div>
          <h4>Full article</h4>
          <p><%= raw @article.content %></p>
        </div>
      </div>

      <!-- Rate the article-->
        <% unless Review.where(article: @article, user: current_user)[0] %>
        <div id="new-review-container">
           <hr>
            <h4>Rate the article</h4>
          <%= render 'reviews/form', article: @article, review: @review %>
        </div>
      <% end %>

      <!-- List of the reviews -->
      <% if @reviews.exists? %>
        <hr>
        <h4>Every reviews</h4>
        <div id="reviews">
        <% @reviews.reverse.each do |review| %>
          <%= render 'reviews/show', article: @article, review: review %>
        <% end %>
        </div>
      <% end %>



      <!-- Add an opinion -->
      <hr>
      <h4>Share your opinion</h4>
      <%= render 'opinions/form', article: @article, opinion: @opinion %>


      <!-- List of opinions -->
      <% if @opinions.exists? %>
        <hr>
        <h4>Every opinions</h4>
        <div id="opinions">
        <% @opinions.reverse.each do |opinion| %>
          <%= render 'opinions/show', article: @article, opinion: opinion %>
        <% end %>
        </div>
      <% end %>



      <!-- End buttons -->

      <div class="buttons">
        <%= link_to "Back", articles_path, class: "btn-gray" %>
      </div>

      <div class="buttons">

        <% if policy(@article).edit? %>
        <%= link_to "Edit", edit_article_path(@article), class: "btn-gray" %>
        <% end %>

        <% if policy(@article).destroy? %>
        <%= link_to "Delete", article_path(@article), class: "btn-gray", method: :delete, data: { confirm: "Are you sure?"} %>
        <% end %>

      </div>
    </div>


    <!-- RIGHT SIDE -->

    <div class="col-xs-5 col-md-5 col-sm-5 card-author">

      <!-- Profile of the writer -->
      <div class="article-profile">

        <div class="center author">
          <img class="card-user" src=<%= @article.user.picture %>>
        </div>

        <div class="user-details">
          <div class="author">
            <p> <b><%= @article.user.first_name%> <%= @article.user.last_name %></b> </p>
          </div>
          <div class="author">
            <p class="grow"> <%= @article.user.city %></p>
          </div>
        </div>

      </div>

      <hr>


      <h4>Bio</h4>
      <p> <%= @article.user.bio %></p>

      <hr>

      <% if user_signed_in? && donation = Donation.find_by(user_id: current_user.id, article_id: @article.id) %>

      <h3>Donation</h3>
      <p><%= donation.amount %>â‚¬</p>
      <a href="#", class= "btn-blue-empty">Donation done</a>
      <h5> Thank you for your donation ! </h5>

      <% else %>

      <div>
        <h4> Support independent writing <i class="fab fa-studiovinari"></i></h4>
        <%= simple_form_for [@article, @donation], :html => {:class => 'form-inline' } do |f| %>
        <%= f.input :amount, label: false, input_html: { class: 'form_light no_border donate-value', value: '0.10' } %>
        <%= button_tag(type: 'submit', class: "btn btn-link donate-button") do %>
        Donate to <%= @article.user.first_name %> <i class="fa fa-heart"></i>
        <% end %>
        <% end %>
        <% end %>
      </div>
    </div>

  </div>

</div>
